<div class="row">
  <div class="col-sm-6">
    <h1><%= @client.name %></h1>
    <h4>In for: <%= @client.preference %></h4>
    <h4>with: <%= @client.barber_name %></h4>
  </div>
  <div class="col-sm-6">
  <form href="/client/<%= @client.name %>" method ="post">
    <input type="hidden" name="_method" value="patch">
    <label for="update_name">Update your name:</label>
    <input type="text" name="update_name" class="form-control">
    <label for="update_name"></label>
    <button type="submit" class="btn btn-danger">Update</button>
  </form>
  <form action="/client/<%= @client.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-danger">Delete Appointment</button>
    </form>
  </div>
</div>
